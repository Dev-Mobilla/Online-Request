@model OnlineRequestSystem.Models.CreateReqModels
@{
    var mySession = (OnlineRequestSystem.Models.ORSession)Session["UserSession"];
}

@if (Model.isPresidentApproval == 1)
{
    <div class="col-md-12">
        <div class="col-md-6">
            @if (mySession.s_usr_id == "LHUI1011873")
            {
                if (Model.Sts_Pres_isApproved == "1")
                {
                    <label>President Approval <span style="color:green;" class="glyphicon glyphicon-check"></span></label>
                    <br />
                    <span>Approved by: </span> @Model.E_PresName
                    <br />
                    <span>Approved Date:</span> @Model.E_PresDate
                    @Html.TextArea("PresApproval", Model.E_PresRemarks, new { @class = "form-control", @rows = "3", @style = "resize:none;max-width:inherit;", @readonly = "readonly" })
                }
                else
                {
                    // To be inputted
                    @Html.TextBoxFor(m => m.Approver, new { @Value = "Pres", @style = "display:none;" })
                    @Html.TextBoxFor(m => m.E_PresName, new { @Value = mySession.s_fullname, @style = "display:none;" })
                    @Html.TextBoxFor(m => m.Sts_Pres_isApproved, new { @Value = "1", @style = "display:none;" })
                    <label>President Approval<b style="color:red;"> *</b></label>
                    @Html.TextAreaFor(m => m.E_PresRemarks, new { @class = "form-control", @rows = "3", @style = "resize:none;max-width:inherit;", @required = "required", @placeholder = "Please Provide Remarks.." })
                    <br />
                    <center>
                        @Html.TextBoxFor(m => m.E_PresDate, new { @Value = DateTime.Now.ToString(), @style = "display:none;" })
                        <button class="btn btn-sm btn-success" type="submit" value="1" name="Status"><span></span>Approve Request</button>&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;&nbsp;
                        <button class="btn btn-sm btn-danger" type="submit" value="0" name="Status"><span></span>Disapprove Request</button>
                        @*<span>@Html.ActionLink("Disapprove Request", "#", null, new { @data_toggle = "modal", @data_target = "#_DisApprove", @style = "color:black;", @class = "disApproved btn btn-sm btn-default" })</span>*@
                    </center>
                }
            }
            else
            {
                if (Model.Sts_Pres_isApproved == "1")
                {
                    <label>President Approval <span style="color:green;" class="glyphicon glyphicon-check"></span></label>
                    <br />
                    <span>Approved by: </span> @Model.E_PresName
                    <br />
                    <span>Approved Date:</span> @Model.E_PresDate
                    @Html.TextArea("PresApproval", Model.E_PresRemarks, new { @class = "form-control", @rows = "3", @style = "resize:none;max-width:inherit;", @readonly = "readonly" })
                }
                else
                {
                    @Html.TextBoxFor(m => m.Sts_Pres_isApproved, new { @Value = Model.Sts_Pres_isApproved, @style = "display:none;" })
                    <label>President Approval</label>
                    <br />
                    <span>Approved by: </span> @Model.E_PresName
                    <br />
                    <span>Approved Date:</span> @Model.E_PresDate
                    @Html.TextArea("PresApproval", Model.E_PresRemarks, new { @class = "form-control", @rows = "3", @style = "resize:none;max-width:inherit;", @readonly = "readonly" })
                }
            }
            <hr style="border-bottom:1px solid #808080" />
        </div>
    </div>
}
