@model OnlineRequestSystem.Models.DivisionInfo

@using (Ajax.BeginForm("AddDivision", "MMD", null, new AjaxOptions { HttpMethod = "POST", OnBegin = "onCreateBegin", OnSuccess = "onCreateSuccess", OnFailure = "onCreateFail" }, new { @class = "form-horizontal" }))
{
    <div id="_AddDivision" class="modal fade" role="dialog" tabindex="-1">
        <div class="modal-dialog" role="document">
            <div class="modal-content jumbotron">
                <div class="modal-header ORSHeading orHeader">
                    <button type="button" class="close" data-dismiss="modal"></button>
                    <b><span>CREATE NEW DIVISION  - APPROVER</span></b>
                </div>
                <div class="modal-body">
                    <table class="table borderless">
                        <thead>
                            <tr>
                                <td style="display:none;">@Html.TextBoxFor(x => x.DivisionID, new { @id = "c_DivisionID" })</td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Division Name:</td>
                                <td>@Html.DropDownListFor(m => m.DivisionName, Model.IRDivisions, "-Select Division-", new { @class = "form-control", @required = "required", @id = "dpDivision" }) @Html.ValidationMessageFor(x => x.DivisionName) </td>
                            </tr>
                            <tr>
                                <td>Division Acro:</td>
                                <td>@Html.TextBoxFor(x => x.DivisionAcro, new { @id = "c_divAcro", @required = "required", @class = "form-control", maxlength = 3 , @readonly = "readonly" }) @Html.ValidationMessageFor(x => x.DivisionAcro) </td>
                            </tr>
                            <tr>
                                <td>Zone Code:</td>
                                <td>@Html.TextBoxFor(x => x.ZoneCode, new { @id = "c_zcode", @required = "required", @class = "form-control", @onkeypress = "AlphaNumeric()", maxlength = 20, @readonly = "readonly"}) @Html.ValidationMessageFor(x => x.ZoneCode) </td>
                            </tr>
                            <tr>
                                <td>Division Manager</td>
                                <td>@Html.TextBoxFor(x => x.DivisionManager, new { @id = "c_divMgr", @required = "required", @class = "form-control", maxlength = 20 })</td>
                            </tr>
                            <tr>
                                <td><b>Approver's IRWeb User ID</b></td>
                                <td>@Html.TextBoxFor(x => x.ApproverResID, new { @required = "required", @class = "form-control", @id = "c_resID", maxlength = 20, @placeholder = "(e.g., NUNE12345678)" }) @Html.ValidationMessageFor(x => x.ApproverResID) </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="submit" id="SubmitNewDivision" class="qabutton btn btn-sm btn-danger orHeader">Save Division</button>
                    <button class="qabutton btn btn-sm btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

}