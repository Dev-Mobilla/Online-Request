                                <td style="padding-left:10px;">@item.BranchName</td>
                                <td>@item.reqCreator</td>
                                <td>
                                    @item.Region
                                    <span style="display:none;">@item.BranchCode</span>
                                </td>
                            </tr>
                        }
                        // -- Display request that MMD is a division approver in Div3
                        else if (item.isApprovedDM == 1 && item.isApprovedLocalDiv == 1 && item.DivCode3 == mySession.s_DivisionID && item.isApprovedDiv3 == 0 && item.isApprovedDiv2 == 1)
                        {
                            <tr class="cellspacer">
                                <td style="padding-left:10px;"><button class="btn btn-sm btn-danger" onclick="location.href='@Url.Action("RequestDetails", "OpenRequest", new { ReqNo = item.reqNumber , BranchCode = item.BranchCode , ZoneCode = @item.ZoneCode , Region = @item.Region })'">Show Details</button></td>
                                <td style="padding-left:20px;"><center>@item.reqDate</center></td>
                                <td style="padding-left:20px;">@item.reqNumber</td>
                                <td style="padding-left:25px;">@item.TypeName</td>
                                <td style="padding-left:10px;">@item.BranchName</td>
                                <td>@item.reqCreator</td>
                                <td>
                                    @item.Region
                                    <span style="display:none;">@item.BranchCode</span>
                                </td>
                            </tr>
                        }
                        else
                        {
                            if (item.isApprovedLocalDiv == 1 && item.result_DM == 1 && item.result_Div1 == 1 && item.result_Div2 == 1 && item.result_Div3 == 1 || mySession.s_fullname == item.reqCreator)
                            {
                                <tr class="cellspacer">
                                    <td style="padding-left:10px;"><button class="btn btn-sm btn-danger" onclick="location.href='@Url.Action("RequestDetails", "OpenRequest", new { ReqNo = item.reqNumber , BranchCode = item.BranchCode , ZoneCode = @item.ZoneCode , Region = @item.Region })'">Show Details</button></td>
                                    <td style="padding-left:20px;"><center>@item.reqDate</center></td>
                                    <td style="padding-left:20px;">@item.reqNumber</td>
                                    <td style="padding-left:25px;">@item.TypeName</td>
                                    <td style="padding-left:10px;">@item.BranchName</td>
                                    <td>@item.reqCreator</td>
                                    <td>
                                        @item.Region
                                        <span style="display:none;">@item.BranchCode</span>
                                    </td>
                                </tr>
                            }
                        }
                    }
                    // -- Display division managers request with approval of the President.
                    else
                    {
                        if (item.isApprovedLocalDiv == 1 && item.result_DM == 1 && item.result_Div1 == 1 && item.result_Div2 == 1 && item.result_Div3 == 1 && item.isApprovedPres == 1 || mySession.s_fullname == item.reqCreator)
                        {
                            <tr class="cellspacer">
                                <td style="padding-left:10px;"><button class="btn btn-sm btn-danger" onclick="location.href='@Url.Action("RequestDetails", "OpenRequest", new { ReqNo = item.reqNumber , BranchCode = item.BranchCode , ZoneCode = @item.ZoneCode , Region = @item.Region })'">Show Details</button></td>
                                <td style="padding-left:20px;"><center>@item.reqDate</center></td>
                                <td style="padding-left:20px;">@item.reqNumber</td>
