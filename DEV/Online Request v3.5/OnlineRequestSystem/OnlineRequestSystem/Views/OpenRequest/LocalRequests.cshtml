@model OnlineRequestSystem.Models.OpenReqInfo
@{
    ViewBag.Title = "ViewOpenRequest";
    var mySession = (OnlineRequestSystem.Models.ORSession)Session["UserSession"];

}
<br />

<div id="openBody" class="jumbotron boxShadow col-md-12" style="width:1300px;margin-left:-5.5%;">
    <div class="panel-heading ORSHeading">
        <b class="orHeader">@Session["DivName"] REQUESTS</b>
    </div>

    <div style="padding-top:7px;"></div>

    @{Html.RenderPartial("~/Views/OpenRequest/OpenReqPartials/Sorting.cshtml");}


    <table class="table-hover" id="DivisionOpenReq">
        <thead>
            <tr>
                <th><center>Select</center></th>
                <th class="col-sm-1"><center>Date Created</center></th>
                <th class="col-sm-2"><center>Request no.</center></th>
                <th class="col-sm-2"><center>Types</center></th>
                <th style="width:6%; padding-left:20px;">Count</th>
                <th style="width:6%; padding-left:20px;">Price</th>
                <th class="col-sm-2" style="padding-left:20px;">Description</th>
                <th class="col-sm-2" style="padding-left:20px;">Branch/Division</th>
                <th class="col-sm-2">Author</th>
                <th class="col-sm-2">Region</th>
                <th class="col-sm-2">Post</th>
            </tr>
        </thead>
        <tbody style="font-size:12px;">
            @if (Model._OpenInfo != null)
            {
                foreach (var item in Model._OpenInfo)
                {
                    if (Model.approver == "dept")
                    {
               <tr class="cellspacer">
                @if (item.MMD_Processed == 1)
                {
                    <td style="padding-left:10px;"><button class="btn btn-sm btn-warning" onclick="location.href='@Url.Action("RequestDetails", "OpenRequest", new { ReqNo = item.reqNumber, BranchCode = item.BranchCode, ZoneCode = @item.ZoneCode, Region = @item.Region, retUrl = Model.returnUrl })'">Show Details</button></td>
                }
                else
                {
                    <td style="padding-left:10px;"><button class="btn btn-sm btn-danger" onclick="location.href='@Url.Action("RequestDetails", "OpenRequest", new { ReqNo = item.reqNumber, BranchCode = item.BranchCode, ZoneCode = @item.ZoneCode, Region = @item.Region, retUrl = Model.returnUrl })'">Show Details</button></td>
                }
                <td style="padding-left:20px;"><center>@item.reqDate</center></td>
                <td style="padding-left:20px;">@item.reqNumber</td>
                <td style="padding-left:15px;">@item.TypeName</td>
                <td><center>@item.TotalItems</center></td>
                <td><center>@item.OverallTotalPrice</center></td>
                <td style="padding-left:20px;">@item.itemDescription.ToString().Substring(0, (item.itemDescription.Length > 16) ? 16 : item.itemDescription.Length)</td>
                <td style="padding-left:20px;">@item.BranchName</td>
                <td>@item.reqCreator</td>
                <td>
                    @item.Region
                    <span style="display:none;">@item.BranchCode</span>
                </td>
                <td><center><span class="glyphicon glyphicon-comment"></span></center></td>
            </tr>
                    }
                    else
                    {
                        if (item.isApprovedLocalDiv == 0)
                        {
        <tr class="cellspacer">
            @if (item.MMD_Processed == 1)
            {
                <td style="padding-left:10px;"><button class="btn btn-sm btn-danger" onclick="location.href='@Url.Action("RequestDetails", "OpenRequest", new { ReqNo = item.reqNumber, BranchCode = item.BranchCode, ZoneCode = @item.ZoneCode, Region = @item.Region, retUrl = Model.returnUrl })'">Show Details</button></td>
            }
            else
            {
                <td style="padding-left:10px;"><button class="btn btn-sm btn-danger" onclick="location.href='@Url.Action("RequestDetails", "OpenRequest", new { ReqNo = item.reqNumber, BranchCode = item.BranchCode, ZoneCode = @item.ZoneCode, Region = @item.Region, retUrl = Model.returnUrl })'">Show Details</button></td>
            }

            <td style="padding-left:20px;"><center>@item.reqDate</center></td>
            <td style="padding-left:20px;">@item.reqNumber</td>
            <td style="padding-left:15px;">@item.TypeName</td>
            <td><center>@item.TotalItems</center></td>
            <td><center>0</center></td>
            <td style="padding-left:20px;">@item.itemDescription.ToString().Substring(0, (item.itemDescription.Length > 16) ? 16 : item.itemDescription.Length)</td>
            <td style="padding-left:20px;">@item.BranchName</td>
            <td>@item.reqCreator</td>
            <td>
                @item.Region
                <span style="display:none;">@item.BranchCode</span>
            </td>
            <td><center><span class="glyphicon glyphicon-comment"></span></center></td>
        </tr>
                        }
                        else if (item.isApprovedLocalDiv == 1)
                        {
                            if (item.DivCode1 == mySession.s_DivisionID && item.isApprovedDiv1 == 0)
                            {
        <tr class="cellspacer">
                                @if (item.MMD_Processed == 1)
                                {
                                    <td style="padding-left:10px;"><button class="btn btn-sm btn-danger" onclick="location.href='@Url.Action("RequestDetails", "OpenRequest", new { ReqNo = item.reqNumber, BranchCode = item.BranchCode, ZoneCode = @item.ZoneCode, Region = @item.Region, retUrl = Model.returnUrl })'">Show Details</button></td>
                                }
                                else
                                {
                                <td style="padding-left:10px;"><button class="btn btn-sm btn-danger" onclick="location.href='@Url.Action("RequestDetails", "OpenRequest", new { ReqNo = item.reqNumber, BranchCode = item.BranchCode, ZoneCode = @item.ZoneCode, Region = @item.Region, retUrl = Model.returnUrl })'">Show Details</button></td>
                                }
            <td style="padding-left:20px;"><center>@item.reqDate</center></td>
            <td style="padding-left:20px;">@item.reqNumber</td>
            <td style="padding-left:15px;">@item.TypeName</td>
            <td><center>@item.TotalItems</center></td>
            <td><center>0</center></td>
            <td style="padding-left:20px;">@item.itemDescription.ToString().Substring(0, (item.itemDescription.Length > 16) ? 16 : item.itemDescription.Length)</td>
            <td style="padding-left:20px;">@item.BranchName</td>
            <td>@item.reqCreator</td>
            <td>
                @item.Region
                <span style="display:none;">@item.BranchCode</span>
            </td>
            <td><center><span class="glyphicon glyphicon-comment"></span></center></td>
        </tr>
                            }
                            else if (item.DivCode2 == mySession.s_DivisionID && item.isApprovedDiv2 == 0)
                            {
            <tr class="cellspacer">
                                @if (item.MMD_Processed == 1)
                                {
                                    <td style="padding-left:10px;"><button class="btn btn-sm btn-danger" onclick="location.href='@Url.Action("RequestDetails", "OpenRequest", new { ReqNo = item.reqNumber, BranchCode = item.BranchCode, ZoneCode = @item.ZoneCode, Region = @item.Region, retUrl = Model.returnUrl })'">Show Details</button></td>
                                }
                                else
                                {
                                    <td style="padding-left:10px;"><button class="btn btn-sm btn-danger" onclick="location.href='@Url.Action("RequestDetails", "OpenRequest", new { ReqNo = item.reqNumber, BranchCode = item.BranchCode, ZoneCode = @item.ZoneCode, Region = @item.Region, retUrl = Model.returnUrl })'">Show Details</button></td>
                                }
            <td style="padding-left:20px;"><center>@item.reqDate</center></td>
            <td style="padding-left:20px;">@item.reqNumber</td>
            <td style="padding-left:15px;">@item.TypeName</td>
            <td><center>@item.TotalItems</center></td>
            <td><center>0</center></td>
            <td style="padding-left:20px;">@item.itemDescription.ToString().Substring(0, (item.itemDescription.Length > 16) ? 16 : item.itemDescription.Length)</td>
            <td style="padding-left:20px;">@item.BranchName</td>
            <td>@item.reqCreator</td>
            <td>
                @item.Region
                <span style="display:none;">@item.BranchCode</span>
            </td>
            <td><center><span class="glyphicon glyphicon-comment"></span></center></td>
        </tr>
                            }
                            else if (item.DivCode3 == mySession.s_DivisionID && item.isApprovedDiv3 == 0)
                            {
        <tr class="cellspacer">
            @if (item.MMD_Processed == 1)
            {
                <td style="padding-left:10px;"><button class="btn btn-sm btn-danger" onclick="location.href='@Url.Action("RequestDetails", "OpenRequest", new { ReqNo = item.reqNumber, BranchCode = item.BranchCode, ZoneCode = @item.ZoneCode, Region = @item.Region, retUrl = Model.returnUrl })'">Show Details</button></td>
            }
            else
            {
                <td style="padding-left:10px;"><button class="btn btn-sm btn-danger" onclick="location.href='@Url.Action("RequestDetails", "OpenRequest", new { ReqNo = item.reqNumber, BranchCode = item.BranchCode, ZoneCode = @item.ZoneCode, Region = @item.Region, retUrl = Model.returnUrl })'">Show Details</button></td>
            }
            <td style="padding-left:20px;"><center>@item.reqDate</center></td>
            <td style="padding-left:20px;">@item.reqNumber</td>
            <td style="padding-left:15px;">@item.TypeName</td>
            <td><center>@item.TotalItems</center></td>
            <td><center>0</center></td>
            <td style="padding-left:20px;">@item.itemDescription.ToString().Substring(0, (item.itemDescription.Length > 16) ? 16 : item.itemDescription.Length)</td>
            <td style="padding-left:20px;">@item.BranchName</td>
            <td>@item.reqCreator</td>
            <td>
                @item.Region
                <span style="display:none;">@item.BranchCode</span>
            </td>
            <td><center><span class="glyphicon glyphicon-comment"></span></center></td>
        </tr>
                            }
                        }
                    }

                }
            }
        </tbody>
        <tfoot>
            <tr>
                <td style="position:absolute;left:45%; font-weight:bold">
                    <label>Total: </label>

                </td>
            </tr>
        </tfoot>
    </table>
</div>

@section tableCss{
    <link href="~/Content/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/datetime/1.2.0/css/dataTables.dateTime.min.css" rel="stylesheet" />
}

@section scripts{
    <script type="text/javascript" src="//cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.2/moment.min.js"></script>
    <script type="text/javascript" src="//cdn.datatables.net/datetime/1.3.0/js/dataTables.dateTime.min.js"></script>

    @Scripts.Render("~/bundles/openrequestlibraries")

    @Scripts.Render("~/bundles/openrequests")
    <script>
        $('.chkBox').each(function () {
            this.checked = false;
        });
        var clssCount = $('.chkBox').length;
        $(document).ready(function () {
            $(".checkAll").click(function () {
                $('.chkBox:checkbox').not(this).prop('checked', this.checked);
            });
        });
    </script>
}