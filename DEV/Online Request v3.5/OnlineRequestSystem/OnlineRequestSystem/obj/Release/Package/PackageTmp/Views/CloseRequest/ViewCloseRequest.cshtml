@model OnlineRequestSystem.Models.CloseReqInfo
@{
    ViewBag.Title = "ViewCloseRequest";
}
<br />
<div class="jumbotron boxShadow col-md-12" style="width: 1300px; margin-left: -4.5%; padding-right: 0px; padding-left: 0px">
    <div class="panel-heading" style="background-color:#1b5fdc;color:white;">
        <b class="orHeader"><span>@ViewBag.c REQUESTS</span>&nbsp;</b>
    </div>
    <div>
        <div style="padding-top:7px;"></div>
        <table class="table-hover table_data" id="CloseTable" cellspacing="0">
            <thead>
                <tr>
                    <th><center>Select</center></th>
                    <th class="col-sm-2"><center>Date Closed</center></th>
                    <th class="col-sm-2"><center>Request no.</center></th>
                    <th class="col-sm-2"><center>Type</center></th>
                    <th class="col-sm-1"><center>Count</center></th>
                    <th class="col-sm-1"><center>Description</center></th>
                    <th class="col-sm-2"><center>Branch/Division</center></th>
                    <th class="col-sm-2"><center>Author</center></th>
                    <th class="col-sm-2"><center>Region</center></th>
                </tr>
            </thead>
            <tbody style="font-size:12px;">
                @foreach (var item in Model._CloseInfo)
                {
                    <tr class="cellspacer">
                        <td style="text-align:center;"><button class="btn btn-sm btn-primary" onclick="location.href='@Url.Action("closeRequestDetails", "CloseRequest", new { ReqNo = item.reqNumber, BranchCode = item.BranchCode, ZoneCode = @item.ZoneCode, Region = @item.Region })'">Show Details</button></td>
                        <td style="text-align: center"><center>@item.closedDate</center></td>
                        <td style="text-align: center"> @item.reqNumber</td>
                        <td style="text-align: center">@item.TypeName</td>
                        <td style="text-align: center">@item.TotalCount</td>
                        <td style="text-align: center;">@item.itemDescription</td>
                        <td style="text-align: center">@item.BranchName</td>
                        <td style="text-align: center">@item.reqCreator</td>
                        <td style="text-align: center">
                            @item.Region
                            <span style="display:none;">@item.BranchCode</span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section tableCss{
    <link href="~/Content/dataTables.bootstrap4.min.css" rel="stylesheet" />
}

@section scripts{
    <script src="~/Scripts/table/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/table/dataTables.min.js"></script>
    <script>
        $('#CloseTable').DataTable({
            "order": [[0, "desc"]], "bSort": false, stateSave: true
        });

        $(".table_link").on("click", function () {
            $('#CloseTable').DataTable().state.clear();
        });
    </script>
}